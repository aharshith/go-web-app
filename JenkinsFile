pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Install Sonar Scanner') {
            steps {
                script {
                    // Install Sonar Scanner if not already installed
                    sh 'curl -sS https://get.sonarsource.com/sonar-scanner.sh | bash'
                    sh 'export SONAR_SCANNER_HOME=$HOME/sonar-scanner'
                }
            }
        }

        stage('Static Code Analysis') {
            steps {
                withCredentials([string(credentialsId: 'go-web-app', variable: 'SONAR_TOKEN')]) {
                    script {
                        sh """
                            $SONAR_SCANNER_HOME/bin/sonar-scanner \
                            -Dsonar.projectKey=your_project_key \
                            -Dsonar.sources=. \
                            -Dsonar.login=$SONAR_TOKEN
                        """
                    }
                }
            }
        }
    }
}
