pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Install Sonar Scanner') {
            steps {
                script {
                    // Install Sonar Scanner without sudo (if already installed globally, skip this)
                    sh '''#!/bin/bash
                        curl -sS https://get.sonarsource.com/sonarscanner-cli/linux | bash
                    '''
                }
            }
        }

        stage('Build Golang Application') {
            steps {
                script {
                    // Build your Go application
                    sh '''#!/bin/bash
                        go build -o myapp main.go
                    '''
                }
            }
        }

        stage('Static Code Analysis') {
            steps {
                script {
                    // Run SonarQube scanner
                    sh '''#!/bin/bash
                        sonar-scanner
                    '''
                }
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                script {
                    // Build and push Docker image
                    sh '''#!/bin/bash
                        docker build -t myapp .
                        docker push myapp
                    '''
                }
            }
        }

        stage('Update Deployment File') {
            steps {
                script {
                    // Update deployment file (e.g., Kubernetes, Docker Compose)
                    sh '''#!/bin/bash
                        kubectl apply -f deployment.yaml
                    '''
                }
            }
        }
    }

    post {
        always {
            cleanWs()  // Clean up the wor
